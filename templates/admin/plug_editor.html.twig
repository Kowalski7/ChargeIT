{% extends 'base.html.twig' %}

{% block title %}ADMIN: ChargeIT Plug Editor{% endblock %}

{% block body %}
    <script>
        {% if close_window|default %}
        document.body.innerText = "Plug updated! You can now close this window.";
        window.close();
        {% endif %}

        window.onsubmit = function() {
            window.onunload = function() {
                window.opener.location.reload();
            }
            hideControls();
        };

        function hideControls() {
            document.getElementById('controls').style.display = "none";
            document.getElementById('loaderMessage').style.display = "";
        }

        function deletePlug() {
            const choice = confirm("Are you sure you want to delete this plug?");
            if(choice) {
                hideControls();
                location.href = "{{ path('admin_plug_delete', {'id': plug_id}) }}";
            }
        }
    </script>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        body {
            overflow: hidden;
        }
    </style>

    <div class="example-wrapper">
        <div style="text-align: center">
            <h2>Plug Editor</h2>
        </div>

        {{ form_start(editForm) }}
        <label for="connectorInp">Connector type: </label>
        {{ form_widget(editForm.connector_type, {'attr': {'id': 'connectorInp', 'size': 20}}) }}
        <br>
        <label for="maxInp">Max. Output (kW): </label>
        {{ form_widget(editForm.max_output, {'type': 'number', 'attr': {'id': 'maxInp', 'size': 17, 'step': '0.1'}}) }}
        <br>
        <label for="statusInp">Online: </label>
        {{ form_widget(editForm.status, {'attr': {'id': 'statusInp'}}) }}
        <br><br>
        <div id="controls">
            <input type="submit" value="Update details" style="font-size: 1em; width: 8em; height: 2em" />
            <input type="button" value="Delete plug" onclick="deletePlug()" style="font-size: 1em; width: 8em; height: 2em" />
            <br><br>
            <input type="button" value="Cancel" onclick="window.close()" style="font-size: 1em; width: 16.25em; height: 2em" />
        </div>
        <div id="loaderMessage" style="vertical-align: center; text-align: center; display: none;">
            <h3>Please wait...</h3>
        </div>
        {{ form_end(editForm) }}

