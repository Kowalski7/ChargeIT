{% extends 'base.html.twig' %}

{% block title %}ADMIN: ChargeIT Station Editor{% endblock %}

{% block body %}
    <script>
        window.onsubmit = function() {
            hideControls();
        }

        function hideControls() {
            document.getElementById('controls').style.display = "none";
            document.getElementById('loaderMessage').style.display = "";
        }

        function deleteStation() {
            const choice = confirm("Are you sure you want to delete this station?");
            if(choice) {
                hideControls();
                location.href = "{{ path('admin_station_delete', {'id': jsonData.uuid}) }}";
            }
        }
        function deletePlug(id) {
            const choice = confirm("Are you sure you want to delete this plug?");
            if(choice)
                location.href = "/admin/plug/" + id + "/delete";
        }
        function newPopup(url, title) {
            window.open(url, title, 'scrollbars=no,resizable=no,status=no,location=no,toolbar=no,menubar=no,width=330,height=320')
        }
    </script>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table, th, td {
            font-size: 1em;
            border: 1px solid black;
            text-align: center;
        }

        .col {
            border: transparent;
            font-size: 1em;
            text-align: left;
            vertical-align: top;
        }
    </style>

    <div class="example-wrapper">
        <div style="text-align: center">
            <h1>{{ jsonData.name }}</h1>
            <h3>{{ jsonData.address }}</h3>
        </div>
        <table class="col" style="width: 100%;">
            <colgroup>
                <col style="width: 30%">
                <col style="width: 30%">
                <col style="width: 40%">
            </colgroup>
            <tr class="col">
                <td class="col">
                    Modify details:
                    <br><br>
                    {{ form_start(editForm) }}
                        <label for="nameInp" style="display: inline-block; width: 30%">Name: </label>
                        {{ form_widget(editForm.name, {'attr': {'id': 'nameInp', 'style': 'width: 66%'}}) }}
                        <br>
                        <label for="nameInp" style="display: inline-block; width: 30%">Plus Code: </label>
                        {{ form_widget(editForm.plusCode, {'attr': {'id': 'plusCodeInp', 'style': 'width: 66%'}}) }}
                        <br><br>
                        <div id="controls">
                            <input type="submit" value="Update details" style="font-size: 1.08em; width: 45%; height: 2em; margin-right: 4%" />
                            <input type="button" value="Delete station" onclick="deleteStation()" style="font-size: 1.08em; width: 45%; height: 2em; margin-left: 4%" />
                            <br>
                            <input type="button" value="Add new plug" onclick="newPopup('{{ path('admin_plug_create') }}?station={{ jsonData.uuid }}', 'create_plug')" style="font-size: 1.08em; width: 99%; height: 2em; margin-top: 0.5rem" />
                            <br><br>
                            <input type="button" value="Return to station list" onclick="location.href='{{ path('admin_stations') }}'" style="font-size: 1.08em; width: 99%; height: 2em" />
                        </div>
                        <div id="loaderMessage" style="vertical-align: center; text-align: center; display: none;">
                            <h3>Please wait...</h3>
                        </div>
                    {{ form_end(editForm) }}
                </td>
                <td class="col">
                    <!-- Empty column for spacing -->
                </td>
                <td class="col">
                    Plugs list:
                    <table style="vertical-align: center; horiz-align: center;">
                        <colgroup>
                            <col style="width: 25%">
                            <col style="width: 30%">
                            <col style="width: 20%">
                            <col style="width: 15%">
                        </colgroup>
                        <tr>
                            <th>Status</th>
                            <th>Connector</th>
                            <th>Max. Output (kW)</th>
                            <th>Options</th>
                        </tr>
                        {% for obj in jsonData.plugs %}
                            <tr>
                                <td>{{ obj.status ? "Online" : "Offline" }}</td>
                                <td>{{ obj.connector }}</td>
                                <td>{{ obj.output }}</td>
                                <td>
                                    <a href="javascript:newPopup('{{ path('admin_plug_edit', {'id': obj.id}) }}', 'edit_{{ obj.id }}')">Edit</a><br>
                                    <a href="javascript:deletePlug('{{ obj.id }}')">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}