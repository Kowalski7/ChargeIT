{% extends 'base.html.twig' %}

{% block title %}ChargeIT My Cars{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <script>
        function deleteCar(plate) {
            const choice = confirm("Are you sure you want to remove this car?");
            if(choice)
                location.href = "/car/" + plate + "/delete";
        }
        function newPopup(url, title) {
            window.open(url, title, 'scrollbars=no,resizable=no,status=no,location=no,toolbar=no,menubar=no,width=450,height=330')
        }
    </script>

    <style>
        .example-wrapper { margin: 1em auto; max-width: 75%; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table, th, td {
            font-size: 1em;
            border: 1px solid black;
            text-align: center;
        }
    </style>

    <div class="example-wrapper">
        <div style="text-align: center">
            <h1>My Cars</h1>
            <h3>Here's a list of all the cars you've added to your account:</h3>
        </div>
        <div>
            <input type="button" value="Add a car" onclick="newPopup('{{ path('app_car_create') }}', 'create_car')" style="font-size: 1.08em; width: 100%; height: 2em; margin-bottom: 0.5rem" />
            <table style="width: 100%">
                <colgroup>
                    <col style="width: 50%">
                    <col style="width: 35%">
                    <col style="width: 15%">
                </colgroup>
                <tr>
                    <th>License Plate</th>
                    <th>Plug Type</th>
                    <th>Options</th>
                </tr>
                {% for obj in jsonData %}
                    <tr>
                        <td>{{ obj.plate }}</td>
                        <td>{{ obj.plug }}</td>
                        <td>
                            <a href="javascript:deleteCar('{{ obj.plate }}')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
